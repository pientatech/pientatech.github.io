  <div class="col-lg-8 col-md-10 mx-auto">
    {{#each posts}}
      <div class="post-preview">
        <a href="{{page}}">
          <h2 class="post-title">
            {{title}}
          </h2>
          <h3 class="post-subtitle">
            {{sub_title}}
          </h3>
        </a>
        <p class="post-meta">Posted by {{author}} on {{postdate}}</p> 
      </div>
    {{/each}}

