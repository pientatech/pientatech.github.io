<div class="row">
  <div class="col-lg-8 col-md-10 mx-auto">
    {{#each posts as |post|}}
      {{#> childEntry}}
      <div class="post-preview">
        <a href="{{post.page}}">
          <h2 class="post-title">
            {{post.title}}
          </h2>
          <h3 class="post-subtitle">
            {{post.sub_title}}
          </h3>
        </a>
        <p class="post-meta">Posted by {{post.author}} on {{post.postdate}}</p> 
      </div>
      {{/childEntry}}
    {{/each}}

    <hr>
    <!-- Pager 
    <div class="clearfix">
      <a class="btn btn-primary float-right" href="#">Older Posts &rarr;</a>
    </div>
    -->
  </div>
</div>